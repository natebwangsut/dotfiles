icon-stop = S
icon-play = P
icon-pause = |
icon-next = >
;icon-prev = 
;icon-stop = 
;icon-play = 
;icon-pause = 
;icon-next = 

label-song-maxlen = 25
label-song-ellipsis = true

[module/xbacklight]
